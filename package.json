{
  "name": "aaru",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint --fix --config ./.eslintrc.json --ignore-path ./config/.eslintignore",
    "lint:debug": "eslint --debug --config ./config/eslintrc.json --ignore-path ./config/.eslintignore",
    "format": "prettier --write --config ./config/.prettierrc --ignore-path .gitignore \"./**/*.{js,jsx,ts,tsx,json,css}\"",
    "format:check": "prettier --check --config ./config/.prettierrc --ignore-path .gitignore \"./**/*.{js,jsx,ts,tsx,json,css}\"",
    "test": "jest",
    "test:watch": "jest --detectOpenHandles --watchAll",
    "test:coverage": "jest --detectOpenHandles --coverage",
    "prepare": "husky",
    "check": "tsc --noEmit",
    "check:watch": "tsc --noEmit --watch",
    "knip": "knip",
    "knip:files": "knip --files"
  },
  "jest": {
    "testEnvironment": "jest-environment-jsdom",
    "testMatch": [
      "<rootDir>/tests/**/*.test.tsx"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/config/jest.setup.js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)?$": [
        "ts-jest",
        {
          "tsconfig": "<rootDir>/config/tsconfig.jest.json"
        }
      ]
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "collectCoverageFrom": [
      "app/**/*.{ts,tsx}",
      "public/**/*.{ts,tsx}"
    ],
    "preset": "ts-jest"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.1",
    "@next/third-parties": "^15.0.2",
    "@preact/signals-react": "^2.2.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/typography": "^0.5.15",
    "@vercel/analytics": "^1.3.1",
    "@vercel/functions": "^1.4.2",
    "@visx/group": "^3.3.0",
    "@visx/tooltip": "^3.3.0",
    "critters": "^0.0.25",
    "eslint-plugin-testing-library": "^6.4.0",
    "file-loader": "^6.2.0",
    "framer-motion": "12.0.0-alpha.0",
    "next": "15.0.0",
    "posthog-js": "^1.177.0",
    "react": "19.0.0-rc-65a56d0e-20241020",
    "react-dom": "19.0.0-rc-65a56d0e-20241020",
    "react-hook-form": "^7.53.1",
    "react-intersection-observer": "^9.13.1",
    "react-pdf": "^9.1.1",
    "sonner": "^1.5.0",
    "tailwindcss-animate": "^1.0.7",
    "use-debounce": "^10.0.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.0.1",
    "@svgr/webpack": "^8.1.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20.16.13",
    "@types/react": "npm:types-react@19.0.0-rc.1",
    "@types/react-dom": "npm:types-react-dom@19.0.0-rc.1",
    "cssnano": "^6.0.3",
    "cssnano-preset-advanced": "^6.0.3",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.0.0",
    "eslint-plugin-jest-dom": "^5.4.0",
    "file-loader": "^6.2.0",
    "husky": "9.1.6",
    "image-webpack-loader": "^8.1.0",
    "postcss": "^8.4.47",
    "postcss-combine-duplicated-selectors": "^10.0.3",
    "postcss-custom-media": "^10.0.2",
    "postcss-import": "^15.1.0",
    "postcss-media-minmax": "^5.0.0",
    "postcss-nested": "^6.0.1",
    "postcss-preset-env": "^9.3.0",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^3.4.14",
    "tailwindcss-bg-patterns": "^0.3.0",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "npm:types-react@19.0.0-rc.1",
      "@types/react-dom": "npm:types-react-dom@19.0.0-rc.1"
    }
  }
}
